{
  "name": "clash-config-manager",
  "productName": "clash-config-manager",
  "bundleId": "fun.magicdawn.clash-config-manager",
  "version": "0.4.0",
  "description": "clash configuration manager",
  "license": "MIT",
  "repository": "magicdawn/clash-config-manager",
  "main": "main/index.js",
  "private": true,
  "author": {
    "name": "magicdawn",
    "email": "magicdawn@qq.com",
    "url": "https://magicdawn.fun"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "_install": "napa",
    "_postinstall": "electron-builder install-app-deps",
    "dev:ui": "poi -s -r ts-node/register/transpile-only",
    "dev:main": "poi --config poi-main.config.js --watch",
    "dev:start-main": "electron bundle/development/main/index.js",
    "dev:watch-main": "nodemon bundle/development/main/index.js --exec electron --watch bundle/development/main/",
    "build": "yarn build:ui && yarn build:main",
    "build:ui": "poi --prod -r ts-node/register/transpile-only",
    "build:main": "poi --prod --config poi-main.config.js",
    "pack": "electron-builder --dir",
    "dist:mac": "electron-builder --macos",
    "dist": "electron-builder --macos --linux --windows"
  },
  "napa": {
    "@magicdawn/x": "magicdawn/x#master"
  },
  "devDependencies": {
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "latest",
    "@poi/plugin-typescript": "^12.3.1",
    "@types/eslint": "^7.2.14",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.9",
    "@types/poi": "^12.5.2",
    "@types/prettier": "2.3.2",
    "eslint": "^7.9.0",
    "eslint-plugin-react": "^7.20.6",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "husky": "latest",
    "lint-staged": "latest",
    "monaco-editor-webpack-plugin": "^2.1.0",
    "napa": "^3.0.0",
    "poi": "^12.10.3",
    "prettier": "latest",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "typescript-plugin-css-modules": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,less,vue,ts,tsx}": [
      "prettier --write"
    ]
  }
}
