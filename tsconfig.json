{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "module": "CommonJS",
    "strict": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "ts-node": {
    "transpileOnly": true
  }
}
