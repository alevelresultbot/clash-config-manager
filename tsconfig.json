{
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"],
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "$common": ["common/src/"],
      "$common/*": ["common/src/*"],
      "$main": ["main/src/"],
      "$main/*": ["main/src/*"],
      "$ui": ["ui/src/"],
      "$ui/*": ["ui/src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
